extends ../layout/css.pug

block content
	h1 Create User
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/users/createuser", method="POST")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name", type="text", value=values ? values.name : "")

		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone", type="text" value=values ? values.phone : "")
		button.btn.btn-primary Creaate